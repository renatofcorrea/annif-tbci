{
  "name": "Annif-TBCI",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:0-3.9",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "source annif-venv/bin/activate && pip install -r requirements.txt",
  "postCreateCommand": "cd annif-venv && source bin/activate && pip install annif flask uvicorn",
  "postStartCommand": "cd annif-venv && source bin/activate && annif run --host 0.0.0.0 --port 8000",
  "portsAttributes": {
    "8000": {
      "label": "Application",
      "onAutoForward": "openPreview",
      "visibility": "public"
    }
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "templates/index.html"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python"
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteEnv": {
    "PORT": "8000"
  }
}
